{
  "compilerOptions": {
    "target": "ES2015", // transpile to ES6
    "module": "commonjs",
    "strict": true, // exhaustive type checking
    "outDir": "./dist", // output to `dir` directory
    "noEmitOnError": true, // Stops from transpiling JS if error
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*"], // compile all files inside src (change to ./ if typescript code is in root, even for linter)
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}
